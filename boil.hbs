{
  "sitemap": {
    "template": {{{JSONstringify (read templatePath)}}},
    "data": {
        "urls": [{{#each (read (fileset files "files"))}}
            {
                "loc": "{{../prefix}}{{{filename}}}",
                "lastmod": {{{JSONstringify modified}}},
                "changefreq": "daily"
            }{{#unless @last}},{{/unless}}
        {{/each}}]
    }
  }
}
