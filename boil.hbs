{
  "sitemap": {
    "template": {{{json-stringify (fs-readFile templatePath)}}},
    "data": {
        "urls": [{{#each (fs-readFile (fileset files "files"))}}
            {
                "loc": "{{../prefix}}{{{filename}}}",
                "lastmod": {{{json-stringify modified}}},
                "changefreq": "{{../changefreq}}"
            }{{#unless @last}},{{/unless}}
        {{/each}}]
    }
  }
}
